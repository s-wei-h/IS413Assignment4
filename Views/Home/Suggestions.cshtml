@{
    ViewBag.title = "Suggested Restaurants";
}
@model IEnumerable<FoodieSite.Models.Suggestion>

<div class="container">
    <h1>@ViewBag.Title</h1>

    @foreach (FoodieSite.Models.Suggestion sugg in Model)
    {
    <!--print out all current suggestions-->
        <div class="box">
            <h2>@sugg.name</h2>
            <p>Suggested by @sugg.sName</p>
            <p>Contact Restaurant at @sugg.sPhone</p>
        </div>
    }
</div>

